<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Citizen Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-4">

    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Citizen Dashboard</h1>
        <a href="/citizen/logout" class="bg-red-500 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded">Logout</a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% if (grievances && grievances.length > 0) { %>
            <% grievances.forEach(grievance => { %>
                <div class="bg-white rounded-lg shadow-md p-6">
                    <h2 class="text-xl font-semibold mb-4 text-blue-700"><%= grievance.title %></h2>
                    <p class="text-gray-700 mb-2"><%= grievance.description %></p>
                    <p class="text-sm text-gray-600 mb-2">Status: <span class="font-medium"><%= grievance.status %></span></p>
                    <p class="text-sm text-gray-600 mb-4">Grievance ID: <span class="font-medium"><%= grievance.grievance_id %></span></p>

                    <% if (grievance.attachments && grievance.attachments.length > 0) { %>
                        <div class="mb-4">
                            <p class="text-lg font-semibold mb-2">Attachments:</p>
                            <div class="flex flex-wrap gap-2">
                                <% grievance.attachments.forEach(attachment => { %>
                                    <img src="<%= attachment %>" alt="Attachment" class="max-w-full h-auto rounded-md shadow-sm" style="max-height: 200px;">
                                <% }); %>
                            </div>
                        </div>
                    <% } %>

                    <% if (grievance.comments && grievance.comments.length > 0) { %>
                        <div class="mb-4">
                            <p class="text-lg font-semibold mb-2">Comments:</p>
                            <ul class="list-disc list-inside">
                                <% grievance.comments.forEach(comment => { %>
                                    <li class="text-gray-700"><%= comment.comment_text %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>

                </div>
            <% }); %>
        <% } else { %>
            <p class="text-lg text-gray-700">No grievances found.</p>
        <% } %>
    </div>

</body>
</html>